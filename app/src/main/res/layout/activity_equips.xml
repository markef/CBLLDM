    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semiBlack"
        android:gravity="end|center">
        <Button
            android:id="@+id/bTfcbq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rounded_1"
            android:drawableEnd="@drawable/fcbq"
            android:onClick="openFCBQ"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
        <Button
            android:id="@+id/bTback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_rounded_1"
            android:drawableEnd="@drawable/ic_arrow_back_black_24dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

</LinearLayout>